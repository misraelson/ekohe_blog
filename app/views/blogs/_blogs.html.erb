<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <%# <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p> %>
  <p>
    <%= blog.body %>
  </p>
  <% if logged_in?(:user) %>
    <p class="blog-post-meta">
      <%= link_to blog.status, toggle_status_blog_path(blog), class: (blog.status == "draft" ? 'btn btn-secondary' : 'btn btn-primary') %> /
      <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-success" %> /
      <%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" ) %>
    </p>
  <% end  %>
</div>